<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="16dp"
            android:src="@mipmap/ic_arrow_white_back" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_back"
            android:singleLine="true"
            android:text="BTC/USDT"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_switch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="16dp"
                android:src="@mipmap/ic_share_friend_white" />

        </LinearLayout>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.github.fujianlian.klinechart.KLineChartView
                android:id="@+id/kLineChartView"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/timePanel" />


            <com.google.android.material.tabs.TabLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/kLineChartView"
                app:tabIndicatorColor="@color/F40a3e8"
                app:tabIndicatorHeight="2dp"
                app:tabSelectedTextColor="@color/F40a3e8"
                app:tabTextColor="@color/F40a3e8" />

            <com.season.klinechart.AutofitHeightViewPager
                android:id="@+id/tab_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tab_layout" />

            <include
                android:id="@+id/indexPanelExtra"
                layout="@layout/kc_index_popup"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/timePanel" />
            <include
                android:id="@+id/timePanelExtra"
                layout="@layout/kc_time_popup"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/timePanel" />


            <include
                android:id="@+id/timePanel"
                layout="@layout/kc_panel_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topPanel" />

            <include
                android:id="@+id/topPanel"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                layout="@layout/kc_panel_top" />

        </RelativeLayout>

    </ScrollView>


</LinearLayout>