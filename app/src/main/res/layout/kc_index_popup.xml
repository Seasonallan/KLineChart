<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#252932"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="主网"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/maText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text1"
            android:gravity="center"
            android:text="MA"
            android:textColor="#FF4081"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bollText"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/maText"
            android:gravity="center"
            android:text="BOLL"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mainHide"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bollText"
            android:gravity="center"
            android:text="隐藏"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="副图"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <RadioGroup
            android:id="@+id/k_Group"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="9"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/macdText"
                style="@style/StockTabStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="MACD" />

            <RadioButton
                android:id="@+id/kdjText"
                style="@style/StockTabStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="KDJ" />

            <RadioButton
                android:id="@+id/rsiText"
                style="@style/StockTabStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="RSI" />

            <RadioButton
                android:id="@+id/wrText"
                style="@style/StockTabStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="WR" />

            <RadioButton
                android:id="@+id/subHide"
                style="@style/StockTabStyle"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="隐藏" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>